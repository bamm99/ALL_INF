
<body data-current-user-id="<%= current_user.id %>" class="is-flex is-flex-direction-column h-full">
    <div class='container'>

        <%= render 'shared/screenwarning' %>
        <header class="has-text-centered">
            <h1 class="regularTitle">./all_inf</h1>
            <h2 class="regularsubTittle"> Dashboard de Administración </h2>
        </header>

        <nav>
            <%= render 'shared/adminnavbar' %>
        </nav>

        <div class="is-flex is-flex-grow-1 columns p-2 mb-2 mt-1">
            <!-- Sidebar -->
            <div class="column is-one-quarters box p-4 ml-4 is-flex is-flex-direction-column box_terminal">
                <%= render 'shared/adminsidebar' %>
            </div>
        <!-- Área de Contenido Principal -->
<div class="column is-three-quarters box p-4 mx-4 mb-5 box_main">
    <h2 class="title is-2 mb-5 textoblanco">Editar Curso</h2>
    
    <%= form_with model: @curso, url: actualizar_curso_admin_path(@curso), local: true, class: "space-y-6" do |form| %>
    
    <div class="field">
        <%= form.label :title, "Título", class: "label textoblanco" %>
        <div class="control">
            <%= form.text_field :title, class: "input input-custom" %>
        </div>
    </div>

    <div class="field">
        <%= form.label :description, "Descripción", class: "label textoblanco" %>
        <div class="control">
            <%= form.text_area :description, class: "textarea input-custom" %>
        </div>
    </div>

    <div class="field">
        <%= form.label :file, "Contenido del Curso (.md)", class: "label textoblanco" %>
        <div class="control">
            <%= text_area_tag :file_content, @curso_content, class: "textarea input-custom", rows: 10 %>
        </div>
    </div>

    <div class="field is-grouped is-grouped-right">
        <div class="control">
            <%= form.submit "Guardar Cambios", class: "button is-primary" %>
        </div>
        <div class="control">
            <%= link_to 'Volver', admin_cursos_path, class: "button is-light" %>
        </div>
    </div>
    <% end %>
</div>
</body>


